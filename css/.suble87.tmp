@import url(https://fonts.googleapis.com/css?family=Open+Sans:300);
@import url(https://fonts.googleapis.com/css?family=Exo+2:300);

ol, ul {
	list-style: none;
}

a, a:hover {
	text-decoration: none;
}

* {
	margin: 0;
	padding: 0;
	outline: none;
}

#wrapper {
	width: 1000px;
	margin: 0 auto;
	background-color: #f3f3f3;
}

#header {
	width: 100%;
	height: 60px;
	background-color: #3f3f3f;
}

a, label {
	font-size: 15px;
	font-family: 'OpenSans-Light', 'Open Sans';
	color: #edecec;
}

#header .container {
	width: 900px;
	height: 60px;
	margin-left: 50px;
	margin-right: 50px;
}

.logo {
	float: left;
	line-height: 60px;
}

.logo img {
	width: 75px;
	vertical-align: middle;
}

.nav li {
	float: left;
	margin-top: 20px;
	margin-left: 30px;
}

.nav li:first-child {
	margin-left: 100px;
}

.nav li:last-child {
	margin-left: 40px;
}

.active-nav {
	border-bottom: 1px solid #00afce;
	padding-bottom: 5px;
}

.radio-lang {
	display: none;
}

.lang label {
	float: right;
	width: 26px;
	line-height: 26px;
	margin: 17px 0 17px 12px;
	text-align: center;
	cursor: pointer;
}

.activ-lang label {
	background-color: #00afce;
}

#title-page .container {
	height: 708px;
	text-align: center;
}

.caption-block {
	width: 1000px;
	height: 160px;
	display: table;
	font-family: 'Exo2-Light', 'Exo 2';
}

.caption {
	display: table-cell;
	vertical-align: middle;
}

.caption h1 {
	font-weight: normal;
	font-size: 31px;
	color: #363636;
	text-transform: uppercase;
}

 .caption p {
 	margin-top: 5px;
 	margin-left: 50px;
	font-size: 20px;
	color: #6c6c6c;
}

.scroll-img {
	cursor: pointer;
	margin-top: 50px;
}

#second-page {
	width: 1000px;
	height: 832px;
	margin: auto;
}

.logo-farel {
	margin: 34px 0 54px 315px;
	position: relative;
	width: 448px;
	height: 330px;
}

.corner {
	width: 50px;
	height: 50px;
	position: absolute;
}

.corner-top-left {
	top: 10px;
	left: 10px;
	border-top: 2px solid #727272;
	border-left: 2px solid #727272;
}

.corner-top-right {
	top: 10px;
	left: 295px;
	border-top: 2px solid #727272;
	border-right: 2px solid #727272;
}

.corner-bottom-left {
	top: 268px;
	left: 10px;
	border-bottom: 2px solid #727272;
	border-left: 2px solid #727272;
}

.corner-bottom-right {
	top: 268px;
	left: 295px;
	border-bottom: 2px solid #727272;
	border-right: 2px solid #727272;
}

.instructions {
	width: 820px;
	height: 246px;
	margin-left: 180px;
}

.first-line {
	height: 45px;
}

.third-line, .fifth-line {
	height: 46px;
}

.first-line *, .third-line *, .fifth-line * {
	float: left;
}

.num-block {
	width: 10%;
}

.num {
	width: 44px;
	height: 44px;
	border: 1px solid #00afce;
	border-radius: 50%;
	line-height: 46px;
	text-align: center;
	font-size: 30px;
	color: #00afce;
	font-family: 'OpenSans-Light', 'Open Sans';
}

.info {
	line-height: 45px;
	color: #1B1B1B;
	font-size: 16px;
	font-family: 'OpenSans', 'Open Sans';
}

.info-1 {
	width: 48%;
}

.info a {
	text-transform: uppercase;
	float: left;
	color: #00afce;
}

.app-store {
	margin-top: 4px;
}

.google-play {
	margin-top: 4px;
}

.second-line, .fourth-line {
	height: 55px;
}

.spot {
	width: 6px;
	height: 6px;
	border-radius: 3px;
	background-color: #00afce;
	margin-left: 20px;
	margin-bottom: 12px;
}

.third-line .icon2 {
	margin-left: 138px;
}

.third-line .info-logo {
	margin-top: -4px;
}

.third-line span {
	margin-left: 15px;
	margin-right: 15px;
	color: #00afce;
	font-size: 20px;
	line-height: 46px;
}

.third-line .info-logo {
	width: 75px;
}

.fifth-line img {
	margin-top: -8px;
	margin-left: 70px;
}

